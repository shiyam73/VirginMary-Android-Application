<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  			  android:layout_width="fill_parent"
  			  android:layout_height="fill_parent"
  			  android:orientation="vertical"
  			  android:background="@drawable/check2">
  			  <FrameLayout android:layout_width="fill_parent"
			  			   android:layout_height="wrap_content"
			  			   android:background="#000000">
				  		   <LinearLayout android:layout_width="fill_parent"
				  						 android:layout_height="wrap_content">
				  			  				  <ImageView android:id="@+id/top_virgin_basilca"
								  			  			 android:src="@drawable/peti"
								  			  			 android:layout_width="wrap_content"
								  			  			 android:layout_height="wrap_content"
								  			  			 android:paddingLeft="0dip"
								  			  			 android:layout_gravity="left"/>
								  			  <TextView android:id="@+id/audio_text"
								  			  			android:text="San Juan Diego"
								  			  			android:layout_width="fill_parent"
								  			  			android:layout_height="wrap_content"
								  			  			android:textColor="#FFFFFF"
								  			  			android:textStyle="bold"
								  			  			android:textSize="20sp"
								  			  			android:paddingTop="9dip"
								  			  			android:paddingBottom="8dip"
								  			  			android:gravity="center"
								  			  			android:layout_toRightOf="@id/top_virgin_basilca"/>
						   </LinearLayout>
			  </FrameLayout>
  			  
  			  <ScrollView android:layout_width="fill_parent"
		    			  android:layout_height="fill_parent">
			  			  <LinearLayout android:orientation="vertical"
					    			    android:layout_width="fill_parent"
					    			    android:paddingTop="20dip"
					    			    android:layout_height="fill_parent">
					    			    
					    			    <ImageView android:id="@+id/san_juan_diego_image"
					    			    		   android:layout_width="wrap_content"
					    			    		   android:layout_height="wrap_content"
					    			    		   android:layout_gravity="center"
					    			    		   android:src="@drawable/juan_diego"/>
					    			    <TextView android:id="@+id/san_juan_diego_tv"
					    			    		  android:layout_width="wrap_content"
					    			    		  android:paddingTop="17dip"
					    			    		  android:textStyle="bold"
					    			    		  android:textSize="20sp"
					    			    		  android:layout_gravity="center"
					    			    		  android:layout_height="wrap_content"
					    			    		  android:textColor="#000000"/>
					    			    		  
					    			    <TextView android:id="@+id/san_juan_diego_tv1"
					    			    		  android:layout_width="wrap_content"
					    			    		  android:paddingTop="15dip"
					    			    		  android:textStyle="bold"
					    			    		  android:textSize="17sp"
					    			    		  android:layout_gravity="center"
					    			    		  android:layout_height="wrap_content"
					    			    		  android:textColor="#000000"/>
					    			    		  
					    			    <TextView android:id="@+id/san_juan_diego_tv2"
					    			    		  android:layout_width="match_parent"
					    			    		  android:paddingTop="15dip"
					    			    		  android:textSize="17sp"
					    			    		  android:layout_height="wrap_content"
					    			    		  android:textColor="#000000"/>
					    			   <TextView android:id="@+id/san_juan_diego_tv3"
					    			    		  android:layout_width="wrap_content"
					    			    		  android:paddingTop="20dip"
					    			    		  android:textSize="16sp"
					    			    		  android:layout_height="wrap_content"
					    			    		  android:textColor="#000000"/>
					    			   <TextView android:id="@+id/san_juan_diego_tv4"
					    			    		  android:layout_width="wrap_content"
					    			    		  android:paddingTop="15dip"
					    			    		  android:textSize="16sp"
					    			    		  android:layout_height="wrap_content"
					    			    		  android:textColor="#000000"/>
					    			   <TextView android:id="@+id/san_juan_diego_tv5"
					    			    		  android:layout_width="wrap_content"
					    			    		  android:paddingTop="15dip"
					    			    		  android:textSize="16sp"
					    			    		  android:layout_height="wrap_content"
					    			    		  android:textColor="#000000"/>
					    			   <TextView android:id="@+id/san_juan_diego_tv6"
					    			    		  android:layout_width="wrap_content"
					    			    		  android:paddingTop="15dip"
					    			    		  android:textSize="16sp"
					    			    		  android:layout_height="wrap_content"
					    			    		  android:textColor="#000000"/>
					    			   <TextView android:id="@+id/san_juan_diego_tv7"
					    			    		  android:layout_width="wrap_content"
					    			    		  android:paddingTop="15dip"
					    			    		  android:textSize="16sp"
					    			    		  android:layout_height="wrap_content"
					    			    		  android:textColor="#000000"/>
					    			   <TextView android:id="@+id/san_juan_diego_tv8"
					    			    		  android:layout_width="wrap_content"
					    			    		  android:paddingTop="15dip"
					    			    		  android:textSize="16sp"
					    			    		  android:layout_height="wrap_content"
					    			    		  android:textColor="#000000"/>
					    			  <TextView android:id="@+id/san_juan_diego_tv9"
					    			    		  android:layout_width="wrap_content"
					    			    		  android:paddingTop="15dip"
					    			    		  android:textSize="16sp"
					    			    		  android:layout_height="wrap_content"
					    			    		  android:textColor="#000000"/>
					    			   
					      </LinearLayout>
		      </ScrollView>
</LinearLayout>
